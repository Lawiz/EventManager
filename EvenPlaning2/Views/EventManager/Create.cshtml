@model EvenPlaning2.Data.DataModels.EventModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>EventModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainTheme" class="control-label"></label>
                <input asp-for="MainTheme" class="form-control" />
                <span asp-validation-for="MainTheme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventInfo.DateEvent" class="control-label"></label>
                <input asp-for="EventInfo.DateEvent" class="form-control" />
                <span asp-validation-for="EventInfo.DateEvent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventInfo.DressCode" class="control-label"></label>
                <input asp-for="EventInfo.DressCode" class="form-control" />
                <span asp-validation-for="EventInfo.DressCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventInfo.CountOfPartesipantes" class="control-label"></label>
                <input asp-for="EventInfo.CountOfPartesipantes" class="form-control" />
                <span asp-validation-for="EventInfo.CountOfPartesipantes" class="text-danger"></span>
            </div>
            <hr/>
            <div id="SubThem">
                @{Guid guid = Guid.NewGuid(); }
                <div id="@guid.ToString("N")">
                    <div class="form-group" style="display:inline-block">
                        <label asp-for="SubThems" class="control-label"></label>
                        <input name="SubThems" class="form-control" />
                        <span asp-validation-for="SubThems" class="text-danger"></span>
                    </div>
                    <input type="button" class="btn btn-danger" 
                           value="delete" style="display:inline-block" onclick="Delete('@guid.ToString("N")')"/>
               </div>
            </div>
            <br/>
            <input type="button" class="btn btn-default"
                   value="Add" onclick="Add()" />
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<script>
    function Delete(id) {
        var elem = document.getElementById(id);
        elem.remove();

    }
    function Add() {
        var elem = document.getElementById("SubThem");
        var id="@Guid.NewGuid().ToString("N")";
        elem.innerHTML = `<div id="${id}">
                    <div class="form-group" style="display:inline-block">
                        <label asp-for="SubThems" class="control-label"></label>
                        <input name="SubThems" class="form-control" />
                        <span asp-validation-for="SubThems" class="text-danger"></span>
                    </div>
                    <input type="button" class="btn btn-danger" 
                           value="delete" style="display:inline-block" onclick="Delete(${id})"/>
               </div>`;
        
    }


</script>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
